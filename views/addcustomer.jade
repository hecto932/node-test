extends layout

block content
	.container
		h1 Agregar nuevo cliente
		.row
			div(class='col-md-12')
				.col-md-12
					form(id='formAddCustomer', name='addCustomer', class='form-horizontal', action='/customers/save', method='post')
						p Los campos con asterisco(*) son obligatorios. 
						h2 Datos de Cliente
						.form-group
							label Nombres(*)
							input(type='text', class='form-control', name='name', maxlength='60', required='true')
						.form-group
							label Apellido(*)
							input(type='text', class='form-control', name='lastname', maxlength='30', required='true')
						.form-group
							label Apellido Materno(*)
							input(type='text', class='form-control', name='motherlastname', maxlength='30', required='true')
						.form-group
							label Email(*)
							input(type='email', class='form-control', name='email', maxlength='90', required='true')
						.form-group
							label Teléfono Local
							input(id='localphone', type='text', class='form-control', name='localphone', maxlength='20')
						.form-group
							label Teléfono Celular(*)
							input(id='mobilephone', type='text', class='form-control', name='mobilephone', maxlength='20', required='true')
						.form-group
							label Fecha de Nacimiento(*)
							input(id='birthday', type='text', class='form-control', name='birthday', required='true')
						br
						h2 Direccion
						.form-group
							label Calle y Numero (*)
							input(type='text', class='form-control', name='street', ng-model="street")
						.form-group
							label Delegacion/Municipio (*)
							input(type='text', class='form-control', name='delegation', ng-model="delegation")
						.form-group
							label Ciudad (*)
							input(type='text', class='form-control', name='city', ng-model="city")
						.form-group
							label Colonia (*)
							input(type='text', class='form-control', name='colony', ng-model="colony")
						.form-group
							label Estado (*)
							input(type='text', class='form-control', name='state', ng-model="state")
						.form-group
							label País (*)
							select(class='form-control', name='country_id', ng-model='country_id')
								each country in countries
									option(value='#{country.id}')=country.name
						.form-group
							label Codigo Postal
							input(type='text', class='form-control', name='postalcode', ng-model='postalcode')
						h2 Facturación
						label Activar Facturacion
						input(type='checkbox', id='invoiceCheckbox', class='form-control', name='activate', checked='checked')
						.form-group
							label Nombre/Razon social (*)
							input(type='text', class='invoice form-control', name='reasonname', required='true')
						.form-group
							label RFC (*)
							input(type='text', class='invoice form-control', name='rfc', required='true', pattern="^(([A-Z]|[a-z]|\s){1})(([A-Z]|[a-z]){3})([0-9]{6})((([A-Z]|[a-z]|[0-9]){3}))")
						.form-group
							label Calle y Numero (*)
							input(type='text', class='invoice form-control', name='istreet', ng-value='street')
						.form-group
							label Delegacion/Municipio (*)
							input(type='text', class='invoice form-control', name='idelegation', ng-value='delegation')
						.form-group
							label Ciudad (*)
							input(type='text', class='invoice form-control', name='icity', ng-value='city')
						.form-group
							label Colonia (*)
							input(type='text', class='invoice form-control', name='icolony', ng-value='colony')
						.form-group
							label Estado (*)
							input(type='text', class='invoice form-control', name='istate', ng-value='state')
						.form-group
							label País (*)
							select(class='invoice form-control', name='icountry_id', ng-value='country_id')
								each country in countries
									option(value='#{country.id}')=country.name
						.form-group
							label Codigo Postal
							input(type='text', class='form-control', name='ipostalcode', ng-value='postalcode')
						button(type='submit', class='btn btn-default') Guardar
							

