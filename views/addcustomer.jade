extends layout

block content
	.container
		h1 Agregar nuevo cliente
		.row
			div(class='col-md-12')
				.col-md-6
					form(id='formAddCustomer', name='addCustomer', class='form-horizontal', action='/customers/save', method='post')
						p Los campos con asterisco(*) son obligatorios. 
						.form-group
							label Nombres(*)
							input(type='text', class='form-control', name='name', maxlength='60', required='true')
						.form-group
							label Apellido(*)
							input(type='text', class='form-control', name='lastname', maxlength='30', required='true')
						.form-group
							label Apellido Materno(*)
							input(type='text', class='form-control', name='motherlastname', maxlength='30', required='true')
						.form-group
							label Email(*)
							input(type='email', class='form-control', name='email', maxlength='90', required='true')
						.form-group
							label Telefono Local
							input(id='localphone', type='text', class='form-control', name='localphone', maxlength='20')
						.form-group
							label Telefono Celular(*)
							input(id='mobilephone', type='text', class='form-control', name='mobilephone', maxlength='20', required='true')
						.form-group
							label Fecha de Nacimiento(*)
							input(id='birthday', type='text', class='form-control', name='birthday', required='true')
						br
						button(type='submit', class='btn btn-default') Guardar
							

